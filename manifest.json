{
  "manifest_version": 2,
  "name": "Scratch Ads Counter",
  "version": "1.2.1",
  "description": "Counts Scratch ads",
  "permissions": [
    "activeTab",
    "https://scratch.mit.edu/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://scratch.mit.edu/*"],
      "js": ["content-script.js"]
    }
  ]
}
